# =============================================================================
# Aoi AI Agent - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configuration

# -----------------------------------------------------------------------------
# Core AI Services
# -----------------------------------------------------------------------------

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Jina Embeddings API Key
# Get from: https://jina.ai/
JINA_API_KEY=your_jina_api_key_here

# -----------------------------------------------------------------------------
# Vector Database (Weaviate)
# -----------------------------------------------------------------------------

# Weaviate URL (local or cloud)
WEAVIATE_URL=http://localhost:8080

# Weaviate API Key (only required for Weaviate Cloud)
# Get from: https://console.weaviate.cloud/
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Weaviate Class Name for knowledge storage
WEAVIATE_CLASS_NAME=AoiKnowledge

# -----------------------------------------------------------------------------
# Session Storage (Redis)
# -----------------------------------------------------------------------------

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis database number (0-15)
REDIS_DB=0

# Redis password (if required)
# REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# Knowledge Base (Obsidian)
# -----------------------------------------------------------------------------

# Path to Obsidian vault directory
OBSIDIAN_VAULT_PATH=./obsidian-data

# File extensions to process
OBSIDIAN_FILE_EXTENSIONS=.md,.txt

# Auto-sync interval (in seconds)
OBSIDIAN_SYNC_INTERVAL=300

# -----------------------------------------------------------------------------
# Agno Framework (Optional)
# -----------------------------------------------------------------------------

# Agno API Key for monitoring and analytics
# Get from: https://app.agno.com/
AGNO_API_KEY=your_agno_api_key_here

# Agno project name
AGNO_PROJECT_NAME=aoi-agent

# Enable Agno monitoring
AGNO_MONITORING_ENABLED=true

# -----------------------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------------------

# Aoi Agent Service
AOI_AGENT_HOST=0.0.0.0
AOI_AGENT_PORT=7777
AOI_AGENT_DEBUG=false

# Web UI Service
NEXT_PUBLIC_API_URL=http://localhost:7777
NEXT_PUBLIC_APP_NAME=Aoi AI Agent

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/aoi-agent.log

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

# JWT Secret for session management
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------

# Environment mode
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# Test database URL (for testing)
TEST_DATABASE_URL=sqlite:///./test.db

# Mock external APIs in development
MOCK_EXTERNAL_APIS=false